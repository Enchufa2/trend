#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


# Optimization flags
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif


# Build
build: build-stamp

build-stamp:
	dh_testdir
	$(MAKE)
	touch build-stamp


# Cleanup
clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	-$(MAKE) clean
	dh_clean 


# Install
install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	cp trend $(CURDIR)/debian/trend/usr/bin/


# Build architecture-independent files
binary-indep: build install

# Build architecture-dependent files
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installinfo
#	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb


# Stubs
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
